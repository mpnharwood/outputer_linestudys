<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="span8">
    <% if @user.linestudies.any? %>
      <h3>Linestudies (<%= @user.linestudies.count %>)</h3>
      <ol class="linestudies">
        <%= render @linestudies %>
      </ol>
      <%= will_paginate @linestudies %>
    <% end %>
  </div>

</div>