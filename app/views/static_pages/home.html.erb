<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/linestudy_form' %>
      </section>
    </aside>

    <div class="span8">
      <% if @user.linestudies.any? %>
        <h3>Linestudies (<%= @user.linestudies.count %>)</h3>
        <ol class="linestudies">
        <%= render @linestudies %>
        </ol>
        <%= will_paginate @linestudies %>
      <% end %>
    </div>

  </div>
<% else %>

	<div class="center hero-unit">
		<h1>QuickStudy App</h1>
		<h2>This is the home page for QuickStudy application.</h2>
		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>

<% end %>